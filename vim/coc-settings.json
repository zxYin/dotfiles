{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".root"],
            "initializationOptions": {
                "cache": { "directory": ".ccls-cache" },
                "client": {"snippetSupport": true },
                "completion": {"placeholder": false },
                "index": { "threads": 8 },
                "clang": {
                    "extraArgs": [
                        "clang++",
                        "-isystem",
                        "/usr/local/include",
                        "-isystem",
                        "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/include/c++/v1",
                        "-isystem",
                        "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/lib/clang/11.0.3/include",
                        "-isystem",
                        "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX10.15.sdk/usr/include",
                        "%c -std=c17",
                        "%cpp -std=c++17"
                    ]
                }
            }
        },
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".git/", ".root"],
            "disableWorkspaceFolders": true,
            "filetypes": ["go"],
            "initializationOptions": {
                "usePlaceholders": true,
                "completeUnimported": true,
                "deepCompletion": true
            }
        },
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        }
    },
    "markdownlint.config": {
        "line_length": false,
        "MD001": false
    },
    "suggest.enablePreview": true,
    "suggest.noselect": false,
    "python.autoComplete.addBrackets": true,
    "python.pythonPath": "/usr/local/bin/python3.7",
    "python.jediEnabled": false,
    "python.condaPath": "/Users/yinzixin/opt/anaconda3/bin/python",
    "java.completion.guessMethodArguments": true,
    "java.home": "/Library/Java/JavaVirtualMachines/openjdk-13.jdk/Contents/Home",
    "git.changedSign.text": "▌",
    "git.addedSign.text": "▌",
    "git.removedSign.text": "▁",
    "git.changeRemovedSign.text": "▁",
    "git.topRemovedSign.text": "▔",
    "explorer.keyMappings": {
        "s": false,
        "E": false,
        "<c-x>": "open:split",
        "<c-v>": "open:vsplit"
    },
    "explorer.icon.enableNerdfont": true,
    "explorer.quitOnOpen": true,
    "explorer.file.showHiddenFiles": true
}
